{
    "toml": {
        "indentWidth": 4,
        "lineWidth": 80
    },
    "json": {
        "trailingCommas": "never",
        "indentWidth": 4,
        "lineWidth": 80
    },
    "markdown": {
        "textWrap": "always",
        "lineWidth": 80
    },
    "markup": {
        "lineBreak": "lf",
        "indentWidth": 4,
        "printWidth": 80,
        "associations": ["**/*.j2"]
    },
    "jinja": {
        "lineBreak": "lf",
        "indentWidth": 4,
        "printWidth": 80,
        "associations": ["**/*.j2"]
    },
    "malva": {
        "lineBreak": "lf",
        "indentWidth": 4,
        "printWidth": 80
    },
    "dockerfile": {
        "lineWidth": 80
    },
    "excludes": [
        "__pycache__/",
        "build/",
        ".venv/",
        "docs/"
    ],
    "plugins": [
        "https://plugins.dprint.dev/toml-0.7.0.wasm",
        "https://plugins.dprint.dev/json-0.21.0.wasm",
        "https://plugins.dprint.dev/markdown-0.20.0.wasm",
        "https://plugins.dprint.dev/dockerfile-0.3.3.wasm",
        "https://plugins.dprint.dev/g-plane/malva-v0.15.0.wasm",
        "https://plugins.dprint.dev/g-plane/markup_fmt-v0.24.1.wasm",
        "https://plugins.dprint.dev/g-plane/pretty_jinja-v0.2.0.wasm"
    ]
}
